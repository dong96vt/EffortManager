@{ Layout = "_LayoutDefault";}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập - SomeThingManager</title>
</head>
<div class="container">
    <form class="col-4 offset-4" method="post" asp-controller="Home" asp-action="Login">
        <h1 class="display-5 text-center">Đăng nhập</h1>
        <hr>
        <div class="form-group">
            <input id="username" class="form-control" type="text" placeholder="Tên đăng nhập" name="username">
        </div>
        <div class="form-group">
            <input id="password" class="form-control" type="password" placeholder="Mật khẩu" name="password">
        </div>
        <hr>
        <input type="reset" class="btn btn-warning" value="Nhập lại">
        <input type="submit" class="btn btn-primary float-right" value="Đăng nhập">
    </form>
</div>